<div class="headline border">
  <h1>Your Account</h1>
</div>

<div class="profile border">
  <%= avatar_or_initials(@user, "profile-picture") %>
  <div class="profile-info">
    <div class="profile-name">
      <h2><%= @user.full_name %></h2>
    </div>
    <% if @user.admin? %>
    	<div class="profile-label">
      	<span class="label label-default label-custom">Admin</span>
    	</div>
    <% end %>
  </div>
  <div class="edit-picture">
    <form class="form-horizontal" role="form">
      <div class="form-group">
        <label for="inputFirstName" class="control-label label-custom">Edit Profile Picture</label>
        <div class="col-sm-6 col-sm-offset-4 file-input-form">
          <input type="file" id="exampleInputFile" class="custom-file-input">
        </div>
      </div>
    </form>
  </div>
</div>

<div class="edit border">
  <h4>Edit Profile</h4>
    <%= render "form" %>
</div>

<div class="final-links no-border">
  <p><%= link_to 'Change Password', edit_user_registration_path %></p>
  <p><%= link_to 'Sign Out', destroy_user_session_url(subdomain: 'www'), method: :delete %></p>
</div>





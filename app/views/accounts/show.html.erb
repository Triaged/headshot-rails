<%= image_tag @current_user.avatar.face.url, :width => 60 %>
<%= @current_user.name %> <br />
<%= @current_user.employee_info.job_title %> <br />
<%= @current_user.employee_info.cell_phone %><br />
<%= @current_user.employee_info.office_phone %><br />
<%= @current_user.employee_info.job_start_date %><br />
<%= @current_user.employee_info.birth_date %><br />

<%= simple_form_for(current_user, :url => account_path, :method => :patch) do |f| %>

	<%= f.input :name %>
	<%= f.input :avatar %>

	<%= f.simple_fields_for :employee_info, current_user.employee_info do |e| %>
		<%= e.input :job_title %>
		<%= e.input :cell_phone %>
		<%= e.input :office_phone %>
		<%= e.input :job_start_date %>
		<%= e.input :birth_date %>
	<% end %>

	<%= f.submit %>

<% end %>

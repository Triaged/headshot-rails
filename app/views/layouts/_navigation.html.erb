<% if user_signed_in? && !current_user.installed_app? %>
<div class="download-notification">
  <div class="container">
    <div class="column-lg-12 notification-copy">
      <p>Welcome to Badge!<span class="nowrap"> <%= active_link_to("Download the mobile app", download_path) %>.</span></p>
    </div>
  </div>
</div>
<% end %>



<div class="navbar navbar-transparent" role="navigation">
    <div class="container">
      <div class="col-lg-6 col-lg-offset-3">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <%= link_to "/" do %> 
            <%= image_tag_with_at2x ("web-app/badge-logo-app.png") %>
          <% end %>
        </div>
        <div class="navbar-collapse collapse">
          <ul class="nav navbar-nav navbar-right">
            <% if user_signed_in? %>
              <%= active_link_to("Download", download_path, :wrap_tag => :li, :class_inactive => 'nav-link', :id => 'download-link') %>
            <% if is_admin? %>
              <%= active_link_to("Contacts", manage_users_path, :wrap_tag => :li, :class_inactive => 'nav-link') %>
              <%= active_link_to("Company", manage_company_path, :wrap_tag => :li, :class_inactive => 'nav-link') %>
            <% end %>
              <%= active_link_to("Profile", account_path, :wrap_tag => :li, :class_inactive => 'nav-link') %>
            <% end %>
          </ul>
        </div><!--/.nav-collapse -->
      </div>
    </div><!--/.container-fluid -->
</div>





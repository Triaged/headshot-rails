<div class="contact-breadcrumb border">
  <h2>
  <%= link_to 'Company', manage_company_path %> <span class="breadcrumb-fwdslsh">/</span> Edit Office Location
  </h2>
</div>

 <div class="edit border">
  <h3>Office Location</h3>
	<%= render 'form' %>
</div>

<div class="final-links no-border">
  <p><%= link_to 'Delete Location', "#", data: {toggle: "modal", target: "#archiveLocation"} %></p>
</div>

<!-- Modal -->
<div class="modal fade" id="archiveLocation" tabindex="-1" role="dialog" aria-labelledby="archiveLocation" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header modal-header-custom">
        <button type="button" class="close close-custom" data-dismiss="modal" aria-hidden="true"><%= icon "times" %></button>
        <h1 class="modal-title" id="myModalLabel">Confirm</h4>
      </div>
      <div class="modal-body modal-body-custom">
        <p>Are you sure you want to delete: </br>
        <%= @office_location.display_name %>
        </p>
        <div class="btns-spacing-sm btns-center">
          <%= link_to "Delete Location", manage_office_location_path(@office_location), method: :delete, class: "btn-custom btn-primary" %>
        </div>
      </div>
      <div class="modal-footer modal-footer-custom">
        <button type="button" class="btn-custom btn-modal btn-default" data-dismiss="modal">Cancel</button>
      </div>
    </div>
  </div>
</div>
<div class="contact-breadcrumb">
  <h2>
    <a href="../home/users">Contacts</a> <span class="breadcrumb-fwdslsh">/</span> Import Contacts
  </h2>
</div>
<div class="add-contacts">
  <h3>Google App Users</h3>
  <p>Please <strong class="custom">deselect</strong> any users that you donâ€™t wish to add to your contact list.</p>
</div>

<%= simple_form_for @import, :url => manage_import_index_path, :method => :post, :html => {:id => 'import_users_form' } do |f| %>

	<%= f.simple_fields_for :imported_users do |u| %>
		<div class="import-profile">
      <div class="contact-info">
        <div class="contact">
          <div class="contact-name">
            <h2><%= u.object.full_name %></h2>
          </div>
          <div class="contact-email">
            <p><%= u.object.email %></p>
          </div>
        </div>
        <div class="add-contact">
          <div class="checkbox checkbox-custom">
            <input type="checkbox" id="checkbox-1-1" />add contact<label for="checkbox-1-1"></label>
            <%#= u.input :should_import %>
          </div>
        </div>
      </div>
    </div>
	<% end %>

	<%= f.hidden_field :provider_id, value: @provider.id %>
	<%= f.submit %>
<% end %>
<%= simple_form_for([:manage, @user]) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
  	<%= f.input :first_name %>
  	<%= f.input :last_name %>
  	<%= f.input :email %>
    <%= f.association :department %>
  	<%= f.simple_fields_for :employee_info do |e| %>
      <%= e.input :job_title %> 
      <%= e.input :cell_phone %>  
       
      <%= e.input :birth_date %>  
      <%= e.input :job_start_date %>  
    <% end %>
    
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>

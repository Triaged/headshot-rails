<div class="contact-profile">
  <%= avatar_or_initials(user, "contact-picture") %>
  <div class="contact-info">
    <div class="contact">
      <div class="contact-name">
        <h2><%= link_to user.full_name, manage_user_path(user) %></h2>
      </div>
      <div class="contact-email">
        <p><%= user.email %></p>
      </div>
    </div>
    <% if user.destroyed? %>
      <%= link_to 'Activate', "#", data: {toggle: "modal", target: "#archiveContact#{user.id}"} %>
    <% else %>
      <div class="activity-state">
        <% if user.installed_app? %>
          <p class="active">active</p>
          <div class="activity-icon">
            <i class="fa fa-mobile"></i>
          </div>
        <% else %>
          <p class="inactive">waiting</p>
          <div class="activity-icon">
            <i class="fa fa-envelope-o"></i>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>

<%= render partial: "reactivate_modal" %>
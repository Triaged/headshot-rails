<div class="contact-profile">
  <div class="contact-picture">
    <%= image_tag user.avatar.url, :class => "picture-frame-sm" %>
  </div>
  <div class="contact-info">
    <div class="contact">
      <div class="contact-name">
        <h3> <%= link_to user.full_name, manage_user_path(user) %></h3>
      </div>
      <div class="contact-email">
        <p><%= user.email %></p>
      </div>
    </div>
    <div class="activity-state">
      <p><%= user.installed_app? %></p>
    </div>
  </div>
</div>
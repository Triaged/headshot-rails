<div class="col-lg-6 col-lg-offset-3 main">
  <div class="contact-breadcrumb">
    <h2>
    <%= link_to 'Contacts', manage_users_path %> <span class="breadcrumb-fwdslsh">/</span> <%= @user.full_name %>
    </h2>
  </div>

  <div class="profile">
    <div class="profile-picture">
      <% if @user.avatar? %>
        <%= image_tag @user.avatar.url, :class => "picture-frame-lg" %>
      <% else %>
        <div class="letter-circle letter-circle-lg">
          <div class="letter-lg"><span><%= @user.initials %></span></div>
        </div>
      <% end %>
    </div>
    <div class="profile-info">
      <div class="profile-name">
        <h2><%= @user.full_name %></h2>
      </div>
      <div class="profile-email">
        <p><%= @user.email %></p>
      </div>
    </div>
  </div>
  <div class="profile-status">
    <h3><%= @user.first_name %> has not yet accepted her email invitation.</h3>
    <div class="profile-status-btn">
      <button type="button" class="btn-custom btn-primary">Resend Invitation</button>
    </div>
  </div>


  <div class="edit">
    <h4>Edit Profile</h4>
      <div class="edit-fields">
        <%= render "form" %>
      </div>
  </div>

  <div class="final-links">
    <p><%= link_to 'Archive Contact', manage_user_path(@user), method: :delete, confirm: "Are you sure you want to archive?" %></p>
  </div>
</div>
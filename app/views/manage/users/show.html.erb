<div class="col-lg-6 col-lg-offset-3">
  <div class="contact-breadcrumb">
    <h3>
    	<%= link_to 'Contacts', manage_users_path %> <span class="breadcrumb-fwdslsh">/</span> Amy Bochi
    </h3>
  </div>

  <div class="profile">
    <div class="profile-picture">
      <%= image_tag @user.avatar.url %>
    </div>
    <div class="profile-info">
      <div class="profile-name">
        <h3><%= @user.full_name %></h3>
      </div>
      <div class="profile-email">
        <p><%= @user.email %></p>
      </div>
    </div>
    <div class="profile-status">
      <h4>Amy has not yet accepted her email invitation.</h4>
      <div class="profile-status-btn">
        <button type="button" class="btn btn-default">Resend Invitation</button>
      </div>
    </div>
  </div>





<%= render "form" %>
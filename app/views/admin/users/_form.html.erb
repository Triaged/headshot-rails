<%= simple_form_for([:admin, @company, @user]) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
  	<%= f.input :first_name %>
  	<%= f.input :last_name %>
  	<%= f.input :email %>
    <%= f.input :admin %>
    <%= check_box_tag :send_confirmation %>
    <%= label_tag(:send_confirmation, "Send Invite Email") %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>

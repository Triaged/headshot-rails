<%= bootstrap_form_for([:admin, @company, @department], layout: :horizontal, label_col: "col-sm-3", control_col: "col-sm-9") do |f| %>
   <div class="form-inputs form-padding">
  	<%= f.text_field :name %>
  </div>


  <div class="form-actions form-pull-right edit-btns">
    <%= link_to "Cancel", manage_company_path, class: "btn-custom btn-default" %>
    <%= f.submit "Save", class: "btn-custom btn-primary" %>
  </div>
<% end %>

<div class="authform">
  <%= bootstrap_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }, layout: :horizontal, label_col: "col-sm-3", control_col: "col-sm-9") do |f| %>
    <h3>Change your password</h3>
    <%= devise_error_messages! %>
    <%= f.hidden_field :reset_password_token %>
    <%= f.password_field :password, autofocus: true, autocomplete: 'off', class: 'form-control' %>
    <%= f.password_field :password_confirmation, autocomplete: 'off', class: 'form-control' %>
    
    <div class="form-actions form-pull-right edit-btns">
      <%= f.submit 'Change my Password', :class => 'button right' %>
    </div>
  <% end %>
</div>

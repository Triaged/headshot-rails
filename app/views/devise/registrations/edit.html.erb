<div class="headline border">
  <h3>Change Password</h3>
</div>

<div class="edit">
<div class="edit-fields">
  <%= bootstrap_form_for(resource, :as => resource_name, :url => user_registration_path(resource_name), :html => { :method => :put, :role => 'form'}, layout: :horizontal, label_col: "col-sm-4", control_col: "col-sm-8") do |f| %>
    <%= devise_error_messages! %>
    

    <div class="form-inputs">
      <div class="col-sm-8 col-sm-offset-4">
        <p class="field-description">Enter your current password to make changes.</p> 
      </div>
      <%= f.password_field :current_password, class: 'form-control' %>
      </br>
      <%= f.password_field :password, :autocomplete => 'off', class: 'form-control' %>
      <%= f.password_field :password_confirmation, class: 'form-control' %>
    </div>

    <div class="form-actions form-pull-right edit-btns">
      <%= link_to "Cancel", account_path, class: "btn-custom btn-default" %>
      <%= f.button "Update", class: "btn-custom btn-primary" %>
    </div>
      
<% end %>
</div>
</div>



